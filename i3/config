# Keyboard layout switcher
set $keyboard_layout Keyboard Layout: (e) ES, (u) US
mode "$keyboard_layout" {
     bindsym e exec --no-startup-id setxkbmap es ,mode "default"
     bindsym u exec --no-startup-id setxkbmap us -variant intl,mode "default"
     # back to normal: Enter or Escape
     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+shift+Z mode "$keyboard_layout"

