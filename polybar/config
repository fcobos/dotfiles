[module/powermenu]
type = custom/menu

; ï“ ï” ï„„ ï„… ï…¼ Â»
;label-open = "ï” "
label-open = " ï€‘  "
label-open-font = 3
label-open-foreground = ${colors.foreground}
label-open-background = ${colors.dark_gray}
label-close =
label-close-foreground = ${colors.foreground}
label-close-background = ${colors.dark_gray}
label-separator = " "
label-separator-foreground = ${colors.foreground}
label-separator-background = ${colors.dark_gray}

; lock
menu-0-0 = "ï€£"
menu-0-0-exec = xset s activate
menu-0-0-foreground = ${colors.foreground}
menu-0-0-background = ${colors.dark_gray}
; logout
menu-0-1 = "ï‚‹"
menu-0-1-exec = zenity --question --text="Logout?" --icon-name=system-log-out-symbolic --default-cancel && (killall -9 pulseaudio ; i3-msg exit)
menu-0-1-foreground = ${colors.foreground}
menu-0-1-background = ${colors.dark_gray}
; sleep
menu-0-2 = "ïŒ"
menu-0-2-exec = zenity --question --text="Suspend?" --icon-name=media-playback-pause-symbolic --default-cancel && systemctl suspend
menu-0-2-foreground = ${colors.foreground}
menu-0-2-background = ${colors.dark_gray}
; reboot
menu-0-3 = "ï€¡"
menu-0-3-exec = zenity --question --text="Reboot?" --icon-name=system-reboot-symbolic --default-cancel && systemctl reboot
menu-0-3-foreground = ${colors.foreground}
menu-0-3-background = ${colors.dark_gray}
; shutdown
menu-0-4 = "ï€‘"
menu-0-4-exec = zenity --question --text="Shutdown?" --icon-name=system-shutdown-symbolic --default-cancel && systemctl poweroff
menu-0-4-foreground = ${colors.foreground}
menu-0-4-background = ${colors.dark_gray}
; end stripe
menu-0-5 = "ï” "
menu-0-5-font = 3
menu-0-5-foreground = ${colors.foreground}
menu-0-5-background = ${colors.dark_gray}
